        div.dropdown
          a(href="#" data-tag="#dropdown-size-modal") Size
          i(class="fa fa-caret-down" aria-hidden="true")


    div.products-list-row
      - shirts.forEach(function(item) {
      -  if (item) {
          li
            img(src=''+item.image+'')
            h5 #{item.name}
            p #{item.price}
      -  } else {
          h2 No Items Available
      - }
      - })


include ../partials/footer.pug
