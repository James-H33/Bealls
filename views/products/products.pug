section.products-list-wrapper
  div.products-list-display
    h2 #{title}

    section.search-bar-wrapper
      div.search-bar-display
        h4 Narrow Search Results:

        div.dropdown.first-dropdown
          a(href="#" data-tag="#dropdown-department-modal") Department
          i(class="fa fa-caret-down" aria-hidden="true")

        div.dropdown
          a(href="#" data-tag="#dropdown-brand-modal") Brand
          i(class="fa fa-caret-down" aria-hidden="true")


        div.dropdown
          a(href="#" data-tag="#dropdown-price-modal") Price
          i(class="fa fa-caret-down" aria-hidden="true")


        div.dropdown
          a(href="#" data-tag="#dropdown-color-modal") Color
